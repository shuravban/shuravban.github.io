#!/bin/sh

posts=$(dirname $(dirname $(realpath "$0")))/_posts

date=$(date +%F)

datetime=$(date +'%F %T %:::z')

title="$1"

# needs my utilities and GNU sed
norm_title=$(echo "$1" | sed 's/ /-/g; s/[.,;:!?"'"'"']//g' | downcase | translit)

file=$posts/$date-$norm_title.markdown

shift

tags="$*"

cat <<END >$file
---
layout: post
title:  $title
date:   $datetime
tags:   $tags
---


END

exec vim + $file
